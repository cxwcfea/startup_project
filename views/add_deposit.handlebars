<div class="admin-content">
    <hr/>

    <div class="am-g am-margin am-padding">
        <div class="am-u-sm-12 am-u-md-8 am-u-md-offset-2">
            <div class="am-panel am-panel-default">
                <div class="am-panel-hd">追加保证金</div>
                <div class="am-panel-bd">
                    <form method="POST" class="am-form am-form-horizontal" id="add-deposit-form" name="add-deposit-form" novalidate>
                        <div class="am-form-group">
                            <label for="deposit_amount" class="am-u-sm-4 am-u-md-3 am-form-label">要追加的保证金额</label>
                            <div class="am-u-sm-8 am-u-md-6 am-u-end">
                                <div class="am-input-group">
                                    <input type="number" name="deposit_amount" id="deposit_amount" placeholder="金额数字" min="0.01" required>
                                    <span class="am-input-group-label">元</span>
                                </div>
                                <p class="am-form-help"> 保证金余额不足30%时,需要追加保证金至80%。 </p>
                            </div>
                        </div>

                        <div class="am-form-group">
                            <div class="am-u-sm-8 am-u-sm-offset-4 am-u-md-10 am-u-md-offset-3">
                                <button id="add-deposit-btn" class="am-btn am-btn-warning">
                                    <i class="am-icon-shopping-cart"></i>
                                    确定
                                </button>
                                <a href="/apply_detail/{{apply.serialID}}" class="am-btn am-btn-warning">
                                    <i class="am-icon-sign-out"></i>
                                    返回
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <hr>
</div>