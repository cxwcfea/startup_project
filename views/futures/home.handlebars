<div class="index-box">
    <div class="chart-box">
        <h4>\{{data.productType}}走势图 <span class="current-price">余额<em>\{{cash | number:0}}</em>牛币</span> <span class="order-list pull-right" ng-click="help()">帮助</span></h4>
        <div class="chart">
            <!--
            <canvas id="J_chart" width="300" height="160" futures-chart="chartLabels" chart-data="chartData"></canvas>
            -->
            <div id="container" style="min-widht:400px;height:230px" futures-chart="chartLabels" chart-data="chartData"></div>
        </div>
        <div class="container">
            <div class="row">
                <!--
                <span class="col-xs-offset-3 col-xs-7">当前价 <em class="text-success">\{{currentPrice | number:1}}元</em> 每手</span>
                <span class="col-xs-6">卖价 <em class="text-success">4138.90</em> 2手</span>
                <span class="col-xs-6">买价 <em class="text-danger">4136.50</em> 21手</span>
                -->
            </div>
        </div>
    </div>
    <div class="opt-box">
        <div class="profit">
            <div class="container">
                <div class="row">
                    <p class="col-xs-4" style="font-size:12px">平仓盈亏 <br><em>\{{lastProfit.toFixed(0)}}</em> </p>
                    <p class="col-xs-4" style="font-size:12px">持仓盈亏 <br><em>\{{profit.toFixed(0)}}</em> </p>
                    <p class="col-xs-4" style="font-size:12px">股指 <br><em>\{{currentPrice.toFixed(1)}}</em> </p>
                </div>
            </div>
        </div>
        {{#unless tradeTime}}
            <p class="trader-time-hint text-danger" {{#if tradeTime}}ng-show="close"{{/if}}>现在是非交易时间</p>
        {{/unless}}
        <div class="opt-btns">
            <div class="btns three" id="J_btns">
				<div class="circle-btn p {{#unless tradeTime}}circle-btn-disable{{/unless}}" ng-class="{'circle-btn-disable':close}">
					<div {{#if tradeTime}}ng-class="{'p-outer-btn-pressed':PButtonPressed, 'p-outer-btn':!PButtonPressed}"{{/if}} class="ex-btn {{#unless tradeTime}}outer-btn-disable{{/unless}}">
						<div id="bp" class="p-inner-btn ex-btn-common {{#unless tradeTime}}inner-btn-disable{{/unless}}" {{#if tradeTime}}ng-click="placeOrder(0)"{{/if}}>
							平
						</div>
					</div>
					<p class="log-label">可平\{{tradeData.sell}}手</p>
				</div>
				<div class="circle-btn z {{#unless tradeTime}}circle-btn-disable{{/unless}}">
					<div {{#if tradeTime}}ng-class="{'z-outer-btn-pressed':ZButtonPressed, 'z-outer-btn':!ZButtonPressed}"{{/if}} class="ex-btn {{#unless tradeTime}}outer-btn-disable{{/unless}}">
						<div id="bz" class="z-inner-btn ex-btn-common {{#unless tradeTime}}inner-btn-disable{{/unless}}" {{#if tradeTime}}ng-click="placeOrder(1)"{{/if}}>
							涨
						</div>
					</div>
					<p class="log-label">\{{tradeData.up}}手</p>
				</div>
				<div class="circle-btn d {{#unless tradeTime}}circle-btn-disable{{/unless}}">
					<div {{#if tradeTime}}ng-class="{'d-outer-btn-pressed':DButtonPressed, 'd-outer-btn':!DButtonPressed}"{{/if}} class="ex-btn {{#unless tradeTime}}outer-btn-disable{{/unless}}">
						<div id="bd" class="d-inner-btn ex-btn-common {{#unless tradeTime}}inner-btn-disable{{/unless}}" {{#if tradeTime}}ng-click="placeOrder(-1)"{{/if}}>
							跌
						</div>
					</div>
					<p class="log-label">\{{tradeData.down}}手</p>
				</div>
            </div>
        </div>
    </div>
</div>
<div class="ui-tip" ng-show="showError">\{{errorMsg}}</div>
