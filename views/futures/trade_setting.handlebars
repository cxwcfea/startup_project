<style>
    .setting-box .info {
        margin-top: 20px;
    }
    .setting-box .info p {
        text-align: center;
    }
    .setting-box .info .confirm {
        margin-top: 10px;
    }
    .setting-box .info .confirm p {
        margin-top: 5px;
    }
    .setting-box .info {
        margin-left: 10px;
        margin-right: 10px;
    }
</style>

<section class="setting-box">
    <header id="header">
        <div class="header-box">
            <h1><span>自动平仓设置</span></h1>
            <a href="" class="back" onclick="history.back(); return false;"></a>
        </div>
    </header>
    <div class="container" ng-init="setDefaultPoint()">
        <div class="row">
            <div class="info">
                <form class="form-inline col-xs-12">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">止损金额</div>
                            <input type="number" class="form-control" ng-model="winPoint" min="1" max="100000" placeholder="持仓亏损达到该金额时系统将自动为您平仓" required>
                        </div>
                        <br>
                        <div class="input-group">
                            <div class="input-group-addon">止盈金额</div>
                            <input type="number" class="form-control" ng-model="lossPoint" min="1" max="100000" placeholder="持仓盈利达到该金额时系统将自动为您平仓" required>
                        </div>
                    </div>
                </form>
                <div class="confirm">
                    <button type="button" class="btn btn-primary col-xs-offset-1 col-xs-10" ng-click="changeSetting()">\{{titleText}}</button>
                </div>
            </div>
        </div>
    </div>
    <div class="ui-tip" ng-show="showError">\{{errorMsg}}</div>
</section>
