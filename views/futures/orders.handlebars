    <div class="records">
        <table class="records-table">
            <thead>
            <tr>
                <th>业务/时间</th>
                <th>总价/单价</th>
                <th class="pull-right">手续费</th>
            </tr>
            </thead>
            <tbody>
            <tr ng-repeat="order in orders">
                <td>
                    <strong>买\{{order.quantity | displayFutureQuantity}}手</strong>
                    <p>\{{order.timestamp | date:'yyyy-MM-dd HH:mm:ss'}}</p>
                </td>
                <td align="right">
                    <strong class="text-danger">\{{(order.lockedCash > 0 ? order.lockedCash : 0 - order.lockedCash) / 100 | number:2}}</strong>
                    <p>\{{order.price / 100 | number:1}}</p>
                </td>
                <td align="right">
                    <strong class="text-danger">-\{{order.fee / 100 | number:2}}</strong>
                    <p></p>
                </td>
            </tr>
