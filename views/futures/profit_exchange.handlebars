<style>
    .profit-wrapper .info {
        background-color: #4b90f7;
        color: white;
        font-size: 2.2em;
        padding: 0.5em;
    }
    .profit-wrapper {
        background-color: white;
    }
    .profit-wrapper .formula {
        padding: 1em;
    }
    .profit-wrapper .formula .title {
        font-size: 1.5em;
        border-bottom: 1px solid gray;
        opacity: 0.5;
    }
    .profit-wrapper .formula .body {
        margin: 2em 0.5em 2em 0.5em;
    }
    .profit-wrapper .formula .num {
        font-size: 1.6em;
        font-weight: bold;
        text-align: center;
    }
    .profit-wrapper .formula .sign {
        text-align: center;
        padding-top: 0.3em;
    }
    .profit-wrapper .formula .desc {
        text-align: center;
        opacity: 0.5;
        font-size: 1.1em;
    }
    .profit-wrapper .formula .footer {
        margin: 2em 0.5em 1em 0.5em;
    }
    .profit-wrapper .formula .footer .point-box {
        height: 6em;
        border: 1px solid gray;
        padding: 0.8em;
        text-align: center;
    }
    .profit-wrapper .formula .footer .point-box .percent {
        font-weight: bold;
    }
    .profit-wrapper .formula .footer .point-box span {
        font-size: 1.1em;
    }
    .selected {
        background-color: #4b90f7;
        color: white;
    }
    .profit-wrapper .how {
        color: #4b90f7;
        margin-bottom: 1.5em;
    }
    .columnRightText {
        overflow: hidden;
        height: 30px;
        background-color: #d3d3d3;
        color: #f35858;
        margin-bottom: 1.5em;
    }
    .columnRightText #demo1,
    .columnRightText #demo2 {
        text-align: center;
    }
    .profit-wrapper .exchange {
        margin-left: 1em;
        margin-bottom: 1.5em;
    }
</style>
<!--#S header-->
<header id="header">
    <div class="header-box">
        <h1>盈利提现</h1>
        <a class="back" href="/futures"></a>
    </div>
</header><!--#E header-->
<div class="profit-wrapper">
    <div class="container">
        <div class="row">
            <p class="info">您盈利\{{user.wechat.profit | number:2}}元，可以兑换\{{cash | number:2}}元现金。</p>
        </div>
        <div class="formula">
            <div class="row">
                <p class="title">提现金额计算</p>
                <div class="body">
                    <span class="col-xs-3 num">\{{user.wechat.profit | number:2}}</span><span class="col-xs-1 sign">x</span><span class="col-xs-3 num text-danger">\{{profitLevel[profitLevelIndex]}}%</span><span class="col-xs-1 sign">=</span><span class="col-xs-3 num text-danger">\{{cash | number:2}}</span>
                    <span class="col-xs-3 desc">盈利</span><span class="col-xs-1"></span><span class="col-xs-3 desc">提现比</span><span class="col-xs-1"></span><span class="col-xs-3 desc">提现金额</span>
                </div>
            </div>
            <div class="footer">
                <div class="row">
                    <span class="col-xs-3 point-box" ng-class="{selected:$index === profitLevelIndex}" ng-repeat="item in profitLevel"><span class="percent">\{{item}}%</span><br><span>\{{pointNeeded[$index]}}点</span></span>
                </div>
            </div>
        </div>
        <div class="progress">
            <div class="progress-bar progress-bar-primary progress-bar-striped" role="progressbar" aria-valuenow="\{{user.score}}" aria-valuemin="0" aria-valuemax="1000" ng-style="percentClass" style="min-width: 1em;">
                <span class="">\{{user.score}}点</span>
            </div>
            <span class="pull-right">当前积分</span>
        </div>
        <div class="how">
            <span ng-click="showScoreHint()">如何获得积分</span>
        </div>
        <div class="scroll-area">
            <div class="columnRightText fl" id="demo">
                <div id="demo1">
                    <div><span class="">永远的山河兑换现金1000</span>元</div>
                    <div><span class="">美国的日落兑换现金200</span>元</div>
                    <div><span class="">飞翔的毛驴兑换现金300</span>元</div>
                    <div><span class="">吃货的烦恼兑换现金400</span>元</div>
                    <div><span class="">没文化的人兑换现金500</span>元</div>
                </div>
                <div id="demo2"></div>
            </div>
        </div>
        <div class="row exchange">
            <button class="btn btn-primary" ng-click="changeCash()">立即兑换现金</button>
        </div>
    </div>
</div>

<script>
    var speed=180; //数字越大速度越慢
    var tab=document.getElementById("demo");
    var tab1=document.getElementById("demo1");
    var tab2=document.getElementById("demo2");
    tab2.innerHTML=tab1.innerHTML; //克隆demo1为demo2
    function Marquee(){
        if(tab2.offsetTop-tab.scrollTop<=0){//当滚动至demo1与demo2交界时
            tab.scrollTop-=tab1.offsetHeight; //demo跳到最顶端
        }
        else{
            tab.scrollTop++;
        }
    }
    var MyMar=setInterval(Marquee,speed);
    tab.onmouseover=function() {clearInterval(MyMar)};//鼠标移上时清除定时器达到滚动停止的目的
    tab.onmouseout=function() {MyMar=setInterval(Marquee,speed)};//鼠标移开时重设定时器
</script>


