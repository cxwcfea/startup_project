<!--#S header-->
<header id="header">
    <div class="header-box">
        <h1>天天投</h1>
        <a class="back" href="/mobile/#/"></a>
        <a class="f-pr" href="/mobile/invest_intro.html">投资说明</a>
    </div>
</header><!--#E header-->

<div>
    <div class="">
        <ul>
            <li><img src="images/ttt1.jpg" width="100%" height="100%"></li>
        </ul>
        <div class="zntz-overlay">
            <ul class="zntz-total">
                <li class="first">
                    <strong>{{count}}</strong>用户累计投入
                    <em>{{total_invest}}元</em>
                </li>
                <li>
                    获取收益
                    <em>{{total_profit}}元</em>
                </li>
            </ul>
        </div>
    </div>
    <div class="zntz-box">
        <ul class="zntz-intro">
            <li>
                <h5>账户资金自动投</h5>
            </li>
            <li>
                <h5>比余额宝高3倍</h5>
            </li>
        </ul>
        <div class="zntz-conf">
            <ul class="zntz-conf-items">
                <li>
                    <label for="">预期年化收益 <i class="icon" ng-click="vm.showRateDialog = true"></i></label>
                    <input type="number" min="1" max="20" required autofocus name="profit-rate" ng-model="vm.profit_rate" disabled><span class="per">%</span>
                </li>
                <li>
                    <label for="">投标项目周期 <i class="icon" ng-click="vm.showPeriodDialog = true"></i></label>
                    <input type="number" name="period" min="1" max="30" required ng-model="vm.period" disabled><span>天内</span>
                </li>
            </ul>
            <div class="zntz-conf-items">
                <span class="info">自定义设置</span>
                <input type="button" value="设置" ng-click="vm.redirectToInvestSetting()">
            </div>
        </div>
    </div>
