<script>
    $(function () {
    // accordion
        $('.accordion-heading').click(function () {
            var $this = $(this);

            if ($this.hasClass('on')) {
                $this.removeClass('on');
                $this.next('.accordion-body').hide();
            }else{
                $this.addClass('on').siblings().removeClass('on');
                $('.accordion-body').hide();
                $this.next('.accordion-body').show();
            }
        }).eq(0).click();
    });
</script>
