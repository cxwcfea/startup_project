<!--#S header-->
<header id="header">
    <div class="header-box">
        <h1>绑定微信</h1>
        <!--
        <a class="back" href="/mobile/#/"></a>
        -->
    </div>
</header><!--#E header-->

<div class="form-box">
    <form name="signup-form" novalidate>
        <div class="form-item">
            <label for="mobile">牛金账号</label><input type="text" autocomplete="off" placeholder="请输入您在牛金网的账号" maxlength="11" pattern="1[3|5|7|8|][0-9]{9}" name="mobile" id="phone" autofocus required ng-model="vm.mobile">
        </div>
        <div class="form-item">
            <label for="password">牛金密码</label>
            <input id="password" name="password" type="password" placeholder="请输入您在牛金网账户的密码" ng-model="vm.password" maxlength="20" minlength="6" name="password" required>
        </div>
        <!--
        <p>我已阅读并同意<a href="/mobile/user_agreement.html">牛金网用户协议</a></p>
        -->
        <button type="submit" class="submit-btn" ng-click="vm.band()">绑定</button>
        <a href="/mobile/#/signup" class="signup-btn">还不是牛金用户？免费注册</a>
    </form>
</div>

<div class="ui-tip" ng-show="vm.inputError">\{{vm.errorMsg}}</div>

<div class="ui-tip-success" ng-show="vm.bandSuccess">
    <div class="icon"></div>
    恭喜您，绑定成功！
</div>