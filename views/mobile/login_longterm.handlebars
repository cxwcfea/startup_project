<!--#S header-->
<header id="header">
    <div class="header-box">
        <h1>登录</h1>
        <a class="back" href="/mobile/#/"></a>
    </div>
</header><!--#E header-->

<div class="form-box">
    <form name="login-form" novalidate>
        <div class="form-item">
            <label for="mobile">账号</label><input id="mobile" name="mobile" type="tel" placeholder="请输入手机号" ng-model="vm.mobile" pattern="1[3|5|7|8|][0-9]{9}" autofocus autocomplete="off" required>
        </div>
        <div class="form-item">
            <label for="password">密码</label>
            <input id="password" name="password" type="password" placeholder="请输入密码" ng-model="vm.password" maxlength="20" minlength="6" name="password" required>
        </div>
        <p><a href="/mobile/#/forget">忘记密码？</a></p>
        <button type="submit" class="submit-btn" ng-click="vm.login_longterm()">登录</button>
    </form>

    <a href="/mobile/#/signup" class="signup-btn">免费注册</a>
</div>

<div class="ui-tip" id="J_loginTip" ng-show="vm.loginError">账号或密码错误</div>
