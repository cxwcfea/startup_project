<div class="user-invest-info">
    <div class="amount-info">
        <ul>
            <li>
                <h5>已收利息(元)</h5>
                <strong>\{{vm.user.finance.history_invest_profit | currency:'':2}}</strong>
            </li>
            <li>
                <h5>已回本金(元)</h5>
                <strong>\{{vm.returnedCapital | currency:'':2}}</strong>
            </li>
            <li>
                <h5>平均收益率(元)</h5>
                <em>\{{vm.ave_profit_rate | currency:'':2}}％</em>
            </li>
        </ul>
    </div>
    <div class="status-tab">
        <ul class="ui-tabs">
            <li ng-class="{current:vm.currentShowing === 1}" ng-click="vm.changeList(1)"><a href="">全部</a></li>
            <li ng-class="{current:vm.currentShowing === 2}" ng-click="vm.changeList(2)"><a href="">待回款</a></li>
            <li ng-class="{current:vm.currentShowing === 3}" ng-click="vm.changeList(3)"><a href="">已回款</a></li>
        </ul>
    </div>
    <ul class="invest-list">
        <li ng-repeat="invest in vm.investList | orderBy:'createdAt':true">
            <a href="" ng-click="vm.showInvestDetail(invest)">
                <h5>\{{invest.borrower | displayMobile}}借款\{{invest.totalAmount | currency:'':2}}元</h5>
                <h6>\{{invest.amount | currency:'':2}}元</h6>
                <p>年息收益\{{invest.profitRate}}%</p>
                <p class="state">到期时间 \{{invest.returnTime | date:"yyyy-MM-dd"}}</p>
            </a>
        </li>
