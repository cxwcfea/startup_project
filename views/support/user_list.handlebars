<div class="am-cf am-padding">
    <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">用户列表</strong> / <small>Users</small></div>
</div>

<div class="am-g">
    <div class="am-u-sm-12 am-u-md-6">
        <div class="am-input-group am-input-group-sm">
            <input type="text" class="am-form-field" placeholder="输入用户手机号" ng-model="userVM.searchKey">
            <span class="am-input-group-btn">
                <button class="am-btn am-btn-default" type="button" ng-click="userVM.searchUser()">搜索</button>
                <button class="am-btn am-btn-default" type="button" ng-click="userVM.showAllUsers()">全部</button>
                <button class="am-btn am-btn-default" type="button" ng-click="userVM.showUsersNotComplete()">未完成注册的</button>
            </span>
        </div>
        <div class="am-input-group am-input-group-sm" ng-show="userVM.showLostAnalysis === 2">
            <input type="text" class="am-form-field" placeholder="输入流失时间" ng-model="userVM.loseDays">
            <span class="am-input-group-btn">
                <button class="am-btn am-btn-default" type="button" ng-click="userVM.showUsersLost()">流失用户</button>
            </span>
        </div>
    </div>
</div>

<div class="am-g">
    <div class="am-u-sm-12">
        <form class="am-form">
            <div class="am-scrollable-horizontal">
            <table class="am-table am-table-striped am-table-hover table-main">
                <thead>
                <tr>
                    <th class="table-id">手机号</th><th class="table-title">姓名</th><th class="table-id">配资额</th><th class="table-author">免费配资</th><th class="table-id">余额</th><th class="table-id">总收益</th><th>客服人员</th><th class="table-date">注册日期</th><th>渠道</th><th class="table-set">操作</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="user in userVM.currentUsers">
                    <td><a href="" ng-click="userVM.viewUserNotes(user)">\{{user.mobile}}</a></td>
                    <td>\{{user.profile.alipay_name || 'N/A'}}</td>
                    <td>\{{user.finance.history_capital | currency:'':2}}</td>
                    <td>\{{user.freeApply ? '是' : '否'}}</td>
                    <td>\{{user.finance.balance | currency:'':2}}</td>
                    <td>\{{user.finance.profit | currency:'':2}}</td>
                    <td>\{{user.manager || '还未分配' | displayManager}}</td>
                    <td>\{{user.registered ? (user.registerAt | date:"yyyy-MM-dd HH:mm") : '未注册'}}</td>
                    <td>\{{user.refer || '未知'}}</td>
                    <td>
                        <div class="am-btn-toolbar">
                            <div class="am-btn-group am-btn-group-xs">
                                <!-- <button class="am-btn am-btn-default am-btn-xs am-text-secondary" ng-click="userVM.open(user.mobile)"><span class="am-icon-envelope"></span> 发短信</button> -->
                                <button class="am-btn am-btn-default am-btn-xs" ng-click="userVM.showApplies(user)"><span class="am-icon-bar-chart"></span> 配资</button>
                                <button class="am-btn am-btn-default am-btn-xs am-text-danger" ng-click="userVM.showOrders(user)"><span class="am-icon-money"></span> 订单</button>
                                <!--
                                <button class="am-btn am-btn-default am-btn-xs am-text-danger" ng-click="userVM.updateBalance(user)"><span class="am-icon-pencil"></span> 修改余额</button>
                                <button class="am-btn am-btn-default am-btn-xs am-text-danger" ng-click="userVM.createOrder(user)"><span class="am-icon-pencil"></span> 创建订单</button>
                                -->
                                <button class="am-btn am-btn-default am-btn-xs am-text-success" ng-hide="user.manager" ng-click="userVM.takeCustomer(user)"><span class="am-icon-user"></span> 我要接手</button>
                                <button class="am-btn am-btn-default am-btn-xs am-text-primary" ng-click="userVM.takeNote(user)"><span class="am-icon-pencil"></span> 记录</button>
                                <button class="am-btn am-btn-default am-btn-xs am-text-danger" ng-show="user.manager" ng-click="userVM.releaseCustomer(user)"><span class="am-icon-user"></span> 放弃客户</button>
                            </div>
                        </div>
                    </td>
                </tr>
                </tbody>
            </table>
            </div>
            <div class="am-cf">
                共 \{{userVM.currentUsers.length}} 条记录
                <div class="am-fr">
                    <pagination previous-text="&lsaquo;" next-text="&rsaquo;" max-size="userVM.maxSize" rotate="false" items-per-page="userVM.itemsPerPage" total-items="userVM.totalItems" ng-model="userVM.currentPage" ng-change="userVM.pageChanged()"></pagination>
                </div>
            </div>
            <hr />
        </form>
    </div>
</div>
