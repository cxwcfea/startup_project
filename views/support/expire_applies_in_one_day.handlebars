<div class="am-cf am-padding">
    <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">以下配资申请只剩1天操盘时间</strong></div>
</div>

<div class="am-g">
    <!--
    <div class="am-u-sm-12 am-u-md-3">
        <div class="am-input-group am-input-group-sm">
            <input type="text" class="am-form-field">
            <span class="am-input-group-btn">
                <button class="am-btn am-btn-default" type="button">搜索</button>
            </span>
        </div>
    </div>
    -->
    <button class="am-btn am-btn-default" type="button" ng-click="vm.sendSellSMS()">发送结算请求短信</button>
</div>

<div class="am-g">
    <div class="am-u-sm-12">
        <div class="am-scrollable-horizontal">
            <table class="am-table am-table-striped am-table-hover table-main">
                <thead>
                <tr>
                    <th class="table-id am-hide-sm-only">单号</th><th class="table-title">手机号</th><th class="table-title am-text-right">操盘资金</th><th class="table-type am-text-right am-hide-sm-only">保证金</th><th class="table-author am-text-center">状态</th><th class="table-date am-text-center">实盘起止日期</th><th class="table-author">Homs</th><th class="table-set">操作</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="apply in vm.showingItems | orderBy:'end_date'">
                    <td class="am-hide-sm-only">\{{apply.serialID}}</td>
                    <td class="">\{{apply.userMobile}}</td>
                    <td class="am-text-right"><span class="am-icon-rmb"></span><strong>\{{apply.amount.toFixed(2)}}</strong></td>
                    <td class="am-text-right am-hide-sm-only"><span class="am-icon-rmb"></span><strong>\{{apply.deposit.toFixed(2)}}</strong></td>
                    <td class="am-text-center">\{{apply.status | applyStatus}}</td>
                    <td class="am-text-center">\{{apply.start_date | displayDate}}<br>\{{apply.end_date | displayDate}}</td>
                    <td class="">\{{apply.account || '尚未分配' }}</td>
                    <td>
                        <!--
                        <div class="am-btn-toolbar">
                            <div class="am-btn-group am-btn-group-xs">
                                <button class="am-btn am-btn-default am-btn-xs am-text-secondary" ng-click="vm.manageApply(apply)"><span class="am-icon-pencil-square-o"></span> 管理</button>
                                <button class="am-btn am-btn-default am-btn-xs am-text-secondary" ng-click="vm.forceCloseApply(apply)"><span class="am-icon-pencil-square-o"></span> 平仓</button>
                            </div>
                        </div>
                        -->
                    </td>
                </tr>
                </tbody>
            </table>
            <div class="am-cf">
                共 \{{vm.totalItems}} 条记录
                <div class="am-fr">
                    <pagination previous-text="&lsaquo;" next-text="&rsaquo;" items-per-page="vm.itemsPerPage" total-items="vm.totalItems" ng-model="vm.currentPage" ng-change="vm.pageChanged()"></pagination>
                </div>
            </div>
            <hr />
        </div>
    </div>
</div>

<script type="text/ng-template" id="forceCloseModal.html">
    <div class="modal-header">
        <h3 class="modal-title">强制平仓</h3>
    </div>
    <div class="modal-body">
        <p>配资单号：\{{serial_id}}</p>
        <p>该配资需要平仓，确认吗？</p>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" ng-click="ok()">确认</button>
        <button class="btn btn-warning" ng-click="cancel()">取消</button>
    </div>
</script>