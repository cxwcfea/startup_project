    <script src="{{static '/vendor/jquery/dist/jquery.min.js'}}"></script>
    <script>
        $(document).ready(function() {
            $('#shengpay_test').on('click', function (e) {
                console.log('shengpay');
                var order_id = $('#order_id')[0].value;
                var pay_amount = $('#pay_amount')[0].value;
                var fakeData = {
                    TransStatus: '01',
                    OrderNo: order_id,
                    TransAmount: pay_amount,
                    TransNo: 'test_pay'
                };
                $.post('/api/shengpay_feedback', fakeData, function() {
                    console.log('success');
                }).done(function() {
                    console.log("second success");
                }).fail(function() {
                    console.log("error");
                }).always(function() {
                    console.log("finished");
                });
            });

            $('#iapppay_test').on('click', function (e) {
                console.log('iapppay');
            });

            $('#stock_test').on('click', function(e) {
                console.log('stock click');
                var s1 = { 'id': '601600', 'name': '中国铝业' };
                var s2 = { 'id': '002130', 'name': '沃尔核材' };
                var stocks = [];
                stocks.push(s1);
                stocks.push(s2);
                var test_str = JSON.stringify(stocks);
                $.post("/api/add_forbidden_stock", {data:test_str}, function() {
                    console.log("success");
                }, 'json').done(function() {
                    console.log("second success");
                }).fail(function() {
                    console.log("error");
                }).always(function() {
                    console.log("finished");
                });
            });
        });
