<div class="wrapper reg">
    <div class="freeTitle">
        <div class="fl"><span>填写验证码</span></div>
        <div class="clear"></div>
    </div>
    {{>flash}}
    <form method="POST" action="/signup" name="signup-form">
        <input type="hidden" class="inputText" name="mobile" id="mobile" value="{{user_mobile}}" autofocus required>
        <div class="carFormBox">
            <div class="cartTitle fl">
                验证码：
            </div>
            <div class="cartFomeContent fl">
                <a href="javascript:" class="carbtn02" id="verify-code-btn">获取验证码</a>
                <input type="number" class="inputText inputYzm" name="verify_code" id="verify_code" placeholder="6位数字验证码" required>
            </div>
        </div>
        <div class="regBtnBox">
            <input id="signup-submit-btn" type="submit" class="ideBtn01 RegBtn01" value="完成注册">
        </div>
    </form>
</div>