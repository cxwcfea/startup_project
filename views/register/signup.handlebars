<div ng-controller="RegisterCtrl as vm" ng-cloak>
    <div class="wrapper reg content">
        <div class="center1000 reg clearfix">
            <form method="POST" action="/signup" id="signup-form" name="signup-form">
                <input type="hidden" name="verify_code" id="verify_code">
                <dl class="left left-v1">
                    <dt><b class="breadCrumb"></b>10秒快速注册</dt>
                    <alert ng-repeat="alert in vm.alerts" type="\{{alert.type}}" close="vm.closeAlert($index)">\{{alert.msg}}</alert>
                    <dd>
                        <div class="left"><label for="phone">手机号码</label></div>
                        <div class="right pr">
                            <input type="text" autocomplete="off" placeholder="请输入手机号码" maxlength="11" class="left" pattern="1[3|5|7|8|][0-9]{9}" name="mobile" id="phone" autofocus required ng-model="vm.mobile">
                            <span class="color_999999">&nbsp;您输入的手机号码将作为账户名</span>
                            <div class="get-num-box">
                                <span>1</span><span>2</span><span>3</span><em class="space"></em><span>2</span><span>1</span><span>2</span>
                            </div>
                        </div>
                        <div class="m-tip">我们不会泄露您的任何信息</div>
                    </dd>
                    <dd class="passwd">
                        <div class="left"><label for="pwd">设置登录密码</label></div>
                        <div class="right">
                            <input type="password" name="password" class="left" id="pwd" placeholder="密码长度6-20位" minlength="6" maxlength="20" required ng-model="vm.password">
                            <i class="tip left" style="width:auto;"></i>
                        </div>
                    </dd>
                    <dd>
                        <div class="left"><label for="re-pwd">再输入一次</label></div>
                        <div class="right">
                            <input type="password" placeholder="保持密码一致" name="confirm_password" class="left" id="re-pwd" minlength="6" maxlength="20" required ng-model="vm.confirm_password">
                            <i class="tip left"></i>
                        </div>
                    </dd>
                    <dd class="freak">
                        <div class="left">&nbsp;</div>
                        <div class="right">
                            <input type="checkbox" ng-model="vm.agree" id="confirm" required><label for="confirm">&nbsp;我已阅读并同意</label><a href="/info/user_agreement">《牛金网用户协议》</a>
                        </div>
                    </dd>
                    <dd>
                        <div class="left">&nbsp;</div>
                        <div class="right">
                            <input type="button" value="立即注册" class="submit" ng-click="vm.register()" > <span class="color_red">领取2000元免费炒股资金</span>
                        </div>
                        <div class="newslist">
                            <ul>
                                {{#if recentApply}}
                                    <li><a href="/apply"><span class="span01">{{recentApply.userMobile}}</span> 成功申请了 <span class="span02">{{recentApply.amount}}</span>元 实盘资金</a></li>
                                    <!--
                                    <li><a href=""><span class="span01">只看盘面</span> 实盘资金2,000 收益<span class="span02">44.88</span> 收益率44.00%</a></li>
                                    -->
                                {{/if}}
                            </ul>
                        </div>
                    </dd>
                </dl>
            </form>
            <div class="right">
                <div class="hasAccount">已有账号？<a href="/login">请登录</a></div>
            </div>
        </div>
    </div>
    <div class="regTcc" ng-show="vm.show_verify_window">
        <div class="tmbg"></div>
        <div class="regTccBox">
            <div class="regColumn">
                注册验证
                <div class="loginClose" ng-click="vm.show_verify_window=false"></div>
            </div>
            <p class="p01">已经向<span>\{{vm.mobile | displayMobile}}</span>发送短信，请再输入验证码完成注册</p>
            <div class="regInputBox">
                <div class="regInputLeft fl">
                    请输入短信验证码
                </div>
                <div class="regIputRight fl">
                    <input type="text" ng-model="vm.verify_code" ng-focus="vm.verify_code_error = false" class="inputText regInputText jq_regInputText" required>
                    <input  type="button" name="" id="verify-code-btn" value="\{{vm.verifyCodeBtnText}}" class="recBtn03" ng-class="{recBtn03_disabled:vm.verifyBtnDisabled}" ng-click="vm.getVerifyCode()">
                </div>
            </div>
            <p class="p02"><span class="jq_p02" ng-show="vm.verify_code_error">\{{vm.signup_error_msg}}</span></p>
            <input type="button" ng-click="vm.confirmVerifyCode()" value="确定" class="recBtn04">
        </div>
    </div>
</div>
