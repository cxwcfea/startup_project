<div class="wrapper reg">
    <div class="freeTitle">
        <div class="fl"><span>重置密码</span></div>
        <div class="clear"></div>
    </div>
    <form method="POST" id="forgot-password-form" name="passForm">
        <div class="carFormBox marTop25">
            <div class="cartTitle fl">
                手机号码：
            </div>
            <div class="cartFomeContent fl">
                <input type="tel" class="inputText" name="mobile" id="mobile" pattern="1[3|5|7|8|][0-9]{9}" required autofocus placeholder="请输入常用的手机号">
            </div>
        </div>
        <div class="carFormBox">
            <div class="cartTitle fl">
                验证码：
            </div>
            <div class="cartFomeContent fl">
                <a href="javascript:" id="verify-code-btn" class="carbtn02">获取验证码</a>
                <input type="number" class="inputText inputYzm" name="verify_code" placeholder="6位数字验证码" required>
            </div>
        </div>
        <div class="carFormBox">
            <div class="cartTitle fl">
                新密码：
            </div>
            <div class="cartFomeContent fl">
                <input type="password" placeholder="密码长度6-20位" maxlength="20" minlength="6" class="inputText" name="password" required>
            </div>
        </div>
        <div class="carFormBox">
            <div class="cartTitle fl">
                确认密码：
            </div>
            <div class="cartFomeContent fl">
                <input type="password" placeholder="保持密码一致" maxlength="20" minlength="6" class="inputText" name="confirm_password" required>
            </div>
        </div>
        <input id="forgot-password-btn" type="submit" class="ideBtn01 RegBtn01" value="修改密码">
    </form>
</div>
{{> mobile_num_alert}}