<div class="am-cf am-padding">
    <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">等待完成提现的订单</strong></div>
</div>

<div class="am-g">
    <div class="am-u-sm-12 am-u-md-3">
        <div class="am-input-group am-input-group-sm">
          <span class="am-input-group-btn">
            <button class="am-btn am-btn-danger" type="button" ng-click="vm.startToPay()">开始支付</button>
            <button class="am-btn am-btn-success" type="button" ng-click="vm.startToCheck()">开始检查</button>
          </span>
        </div>
    </div>
</div>

<div class="am-g">
    <div class="am-u-sm-12">
        <form class="am-form">
            <table class="am-table am-table-striped am-table-hover table-main">
                <thead>
                <tr>
                    <th class="table-date">日期</th><th class="table-type">客户手机号</th><th class="table-author">姓名</th><th class="table-type">银行</th><th class="table-author">金额</th><th class="table-set">状态</th><th class="table-set">操作</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="order in vm.showingItems">
                    <td>\{{order.createdAt | displayDate}}</td>
                    <td>\{{order.userMobile}}</td>
                    <td>\{{order.cardInfo.userName}}</td>
                    <td>\{{order.cardInfo.bank}}</td>
                    <td>\{{order.amount}}</td>
                    <td>\{{order.status | orderStatus}}</td>
                    <td>
                        <div class="am-btn-toolbar">
                            <div class="am-btn-group am-btn-group-xs">
                                <button class="am-btn am-btn-default am-btn-xs am-text-primary" ng-click="vm.handleOrder(order)"><span class="am-icon-pencil-square-o"></span> 管理</button>
                                <button class="am-btn am-btn-default am-btn-xs am-text-danger" ng-click="vm.removeOrder(order)"><span class="am-icon-remove"></span> 驳回</button>
                                <button class="am-btn am-btn-default am-btn-xs am-text-secondary" ng-click="vm.orderHistory(order)"><span class="am-icon-tasks"></span> 历史订单</button>
                                <button class="am-btn am-btn-default am-btn-xs am-text-warning" ng-click="vm.zhongxinPay(order)"><span class="am-icon-credit-card"></span> 中信支付</button>
                                <button class="am-btn am-btn-default am-btn-xs am-text-success" ng-click="vm.zhongxinCheck(order)"><span class="am-icon-check"></span> 检查支付结果</button>
                                <button class="am-btn am-btn-default am-btn-xs am-text-success" ng-click="vm.reGenerateID(order)"><span class="am-icon-check"></span> 重置ID</button>
                            </div>
                        </div>
                    </td>
                </tr>
                </tbody>
            </table>

            <div class="am-cf">
                共 \{{vm.totalItems}} 条记录
                <div class="am-fr">
                    <pagination previous-text="&lsaquo;" next-text="&rsaquo;" items-per-page="vm.itemsPerPage" total-items="vm.totalItems" ng-model="vm.currentPage" ng-change="vm.pageChanged()"></pagination>
                </div>
            </div>
            <hr />
        </form>
    </div>
</div>

