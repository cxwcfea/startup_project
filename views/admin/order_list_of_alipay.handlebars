<div class="am-cf am-padding">
    <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">交易记录</strong></div>
</div>

<div class="am-g">
    <div class="am-u-sm-12 am-u-md-6">
        <div class="am-btn-toolbar">
            <div class="am-btn-group am-btn-group-xs">
                <button ng-repeat="item in vm.queryItems" type="button" class="am-btn am-btn-default" ng-click="vm.queryItem(item)"> \{{item.name}}</button>
            </div>
        </div>
    </div>

    <!--
    <div class="am-u-sm-12 am-u-md-3">
        <div class="am-input-group am-input-group-sm">
            <input type="text" class="am-form-field">
          <span class="am-input-group-btn">
            <button class="am-btn am-btn-default" type="button">搜索</button>
          </span>
        </div>
    </div>
    -->
</div>

<div class="am-g">
    <div class="am-u-sm-12">
        <form class="am-form">
            <table class="am-table am-table-striped am-table-hover table-main">
                <thead>
                <tr>
                    <th class="table-date">日期</th><th class="table-type">支付宝账号</th><th class="table-author">金额</th><th class="table-set">姓名</th><th class="table-set">单号</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="order in vm.showingItems">
                    <td>\{{order.createdAt | displayDate}}</td>
                    <td>\{{order.alipayAccount}}</td>
                    <td>\{{order.amount}}</td>
                    <td>\{{order.name}}</td>
                    <td>\{{order.transID}}</td>
                </tr>
                </tbody>
            </table>

            <div class="am-cf">
                共 \{{vm.totalItems}} 条记录
                <div class="am-fr">
                    <pagination previous-text="&lsaquo;" next-text="&rsaquo;" items-per-page="vm.itemsPerPage" total-items="vm.totalItems" ng-model="vm.currentPage" ng-change="vm.pageChanged()"></pagination>
                </div>
            </div>
            <hr />
        </form>
    </div>
</div>