<div class="am-cf am-padding">
    <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">订单列表</strong></div>
</div>

<div class="am-g">
    <div class="am-u-sm-12 am-u-md-6">
        <div class="am-btn-toolbar">
            <div class="am-btn-group am-btn-group-xs">
                <button ng-repeat="item in orderVM.queryItems" type="button" class="am-btn am-btn-default" ng-click="orderVM.queryItem(item)"> \{{item.name}}</button>
            </div>
        </div>
    </div>
</div>

<div class="am-g">
    <div class="am-u-sm-12">
        <form class="am-form">
            <table class="am-table am-table-striped am-table-hover table-main">
                <thead>
                <tr>
                    <th class="table-type">类型</th><th class="table-type">支付渠道</th><th class="table-type">订单号</th><th class="table-type">用户名</th><th class="table-date">日期</th><th class="table-type">账号</th><th class="table-set">转账单号</th><th class="table-author">金额</th><th class="table-set">状态</th><th class="table-set">操作人员</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="order in orderVM.showingItems">
                    <td>\{{order.dealType | displayOrderType}}</td>
                    <td>\{{order.payType | payType}}</td>
                    <td>\{{order._id}}</td>
                    <td>\{{order.userMobile}}</td>
                    <td>\{{order.createdAt | displayDate}}</td>
                    <td>\{{order.otherInfo}}</td>
                    <td>\{{order.bankTransID}}</td>
                    <td><span class="am-icon-rmb"></span>\{{order.amount}}</td>
                    <td>\{{order.status | orderStatus}}</td>
                    <td>\{{order.approvedBy || 'N/A'}}</td>
                </tr>
                </tbody>
            </table>

            <div class="am-cf">
                共 \{{orderVM.totalItems}} 条记录
                <div class="am-fr">
                    <pagination previous-text="&lsaquo;" next-text="&rsaquo;" max-size="orderVM.maxSize" rotate="false" items-per-page="orderVM.itemsPerPage" total-items="orderVM.totalItems" ng-model="orderVM.currentPage" ng-change="orderVM.pageChanged()"></pagination>
                </div>
            </div>
            <hr />
        </form>
    </div>
</div>
