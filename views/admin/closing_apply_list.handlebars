<div class="am-cf am-padding">
    <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">结算中的配资记录</strong></div>
</div>

<div class="am-g">
    <div class="am-u-sm-12 am-u-md-3">
        <div class="am-input-group am-input-group-sm">
            <!--
            <input type="text" class="am-form-field">
            <span class="am-input-group-btn">
                <button class="am-btn am-btn-default" type="button">搜索</button>
            </span>
            -->
            <p>预计释放资金 <span class="am-badge am-badge-success am-text-lg">\{{closingApplyVM.totalAmount | currency:'':2}}</span></p>
        </div>
    </div>
</div>

<div class="am-g">
    <div class="am-u-sm-12">
        <div class="am-scrollable-horizontal">
            <table class="am-table am-table-striped am-table-hover table-main">
                <thead>
                <tr>
                    <th class="table-id am-hide-sm-only">单号</th><th class="table-title">手机号</th><th class="table-title am-text-right">操盘资金</th><th class="table-type am-text-right am-hide-sm-only">保证金</th><th class="table-author am-text-center">状态</th><th class="table-date am-text-center">实盘起止日期</th><th class="table-author">Homs</th><th class="table-set">操作</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="apply in closingApplyVM.showingItems">
                    <td class="am-hide-sm-only">\{{apply.serialID}}</td>
                    <td class="">\{{apply.userMobile}}</td>
                    <td class="am-text-right"><span class="am-icon-rmb"></span><strong>\{{apply.amount}}</strong></td>
                    <td class="am-text-right am-hide-sm-only"><span class="am-icon-rmb"></span><strong>\{{apply.deposit}}</strong></td>
                    <td class="am-text-center">\{{apply.status | applyStatus}}</td>
                    <td class="am-text-center">\{{apply.start_date | displayDate}}<br>\{{apply.end_date | displayDate}}</td>
                    <td class="">\{{apply.account || '尚未分配' }}</td>
                    <td>
                        <div class="am-btn-toolbar">
                            <div class="am-btn-group am-btn-group-xs">
                                {{#unless watcher}}
                                    <button class="am-btn am-btn-default am-btn-xs am-text-secondary" ng-click="closingApplyVM.manageApply(apply)"><span class="am-icon-pencil-square-o"></span> 管理</button>
                                {{/unless}}
                            </div>
                        </div>
                    </td>
                </tr>
                </tbody>
            </table>
            <div class="am-cf">
                共 \{{closingApplyVM.totalItems}} 条记录
                <div class="am-fr">
                    <pagination previous-text="&lsaquo;" next-text="&rsaquo;" items-per-page="closingApplyVM.itemsPerPage" total-items="closingApplyVM.totalItems" ng-model="closingApplyVM.currentPage" ng-change="closingApplyVM.pageChanged()"></pagination>
                </div>
            </div>
            <hr />
        </div>
    </div>
</div>

