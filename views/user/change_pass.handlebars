<div class="am-cf am-padding">
    <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">修改密码</strong></div>
</div>

<div class="am-margin">
    <form class="am-form" name="passForm">
        <div class="am-g am-margin-top">
            <div class="am-u-sm-4 am-u-md-2 am-text-right">
                旧密码
            </div>
            <div class="am-u-sm-8 am-u-md-4 am-u-end">
                <input type="password" class="am-input-sm" ng-model="passVM.old_pass" required autofocus>
            </div>
        </div>

        <div class="am-g am-margin-top">
            <div class="am-u-sm-4 am-u-md-2 am-text-right">
                新密码
            </div>
            <div class="am-u-sm-8 am-u-md-4 am-u-end">
                <input type="password" class="am-input-sm" ng-model="passVM.new_pass" required>
            </div>
        </div>

        <div class="am-g am-margin-top">
            <div class="am-u-sm-4 am-u-md-2 am-text-right">
                确认密码
            </div>
            <div class="am-u-sm-8 am-u-md-4 am-u-end">
                <input type="password" class="am-input-sm" ng-model="passVM.confirm_pass" required>
            </div>
        </div>

        <div class="am-g am-margin-top">
            <div class="am-u-sm-offset-4 am-u-md-offset-2 am-u-sm-8 am-u-md-4 am-u-end col-end">
                <button type="submit" class="am-btn am-btn-primary" ng-click="passVM.submitRequest()" ng-disabled="passForm.$invalid">修改密码</button>
            </div>
        </div>

    </form>
</div>