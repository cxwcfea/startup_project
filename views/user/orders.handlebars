<div class="am-cf am-padding">
    <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">交易记录</strong></div>
</div>

<div class="am-g">
    <div class="am-u-sm-12 am-u-md-3">
        <div class="am-form-group">
            <select data-am-selected="{btnSize: 'sm'}" ng-model="ordersVM.orderType">
                <option value="option1">所有类别</option>
                <option value="option2">充值</option>
                <option value="option3">提现</option>
            </select>
        </div>
    </div>
    <div class="am-u-sm-12 am-u-md-3">
        <div class="am-input-group am-input-group-sm">
            <input type="text" class="am-form-field">
          <span class="am-input-group-btn">
            <button class="am-btn am-btn-default" type="button">搜索</button>
          </span>
        </div>
    </div>
</div>

<div class="am-g">
    <div class="am-u-sm-12">
        <form class="am-form">
            <table class="am-table am-table-striped am-table-hover table-main">
                <thead>
                <tr>
                    <th class="table-date am-hide-sm-only">日期</th><th class="table-type">交易类型</th><th class="table-title">交易详情</th><th class="table-author am-hide-sm-only">金额</th><th class="table-set">状态</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="order in ordersVM.user.orders">
                    <td class="am-hide-sm-only">\{{ordersVM.formatDate(order.date)}}</td>
                    <td>\{{order.dealType}}</td>
                    <td><a href="#">\{{order.description}}</a></td>
                    <td class="am-hide-sm-only">\{{order.amount}}</td>
                    <td>\{{order.status}}</td>
                </tr>
                </tbody>
            </table>
            <div class="am-cf">
                共 \{{ordersVM.user.orders.length}} 条记录
                <div class="am-fr">
                    <ul class="am-pagination">
                        <li class="am-disabled"><a href="#">«</a></li>
                        <li class="am-active"><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li><a href="#">»</a></li>
                    </ul>
                </div>
            </div>
            <hr />
        </form>
    </div>

</div>
<script src="{{static '/vendor/amazeui/dist/js/amazeui.js'}}"></script>
