<div class="am-cf am-padding">
    <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">交易记录</strong></div>
</div>

<div class="am-g">
    <div class="am-u-sm-12 am-u-md-3">
        <div class="am-form-group">
            <select data-am-selected="{btnSize: 'sm'}" ng-model="ordersVM.orderType" ng-change="ordersVM.change()">
                <option value="all" selected>所有类别</option>
                <option value="pay">充值</option>
                <option value="withdraw">提现</option>
            </select>
        </div>
    </div>
    <!--
    <div class="am-u-sm-12 am-u-md-3">
        <div class="am-input-group am-input-group-sm">
            <input type="text" class="am-form-field">
          <span class="am-input-group-btn">
            <button class="am-btn am-btn-default" type="button">搜索</button>
          </span>
        </div>
    </div>
    -->
</div>

<div class="am-g">
    <div class="am-u-sm-12">
        <form class="am-form">
            <table class="am-table am-table-striped am-table-hover table-main">
                <thead>
                <tr>
                    <th class="table-date">日期</th><th class="table-type">交易类型</th><th class="table-author">金额</th><th class="table-set">状态</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="order in ordersVM.currentOrders">
                    <td>\{{ordersVM.formatDate(order.date)}}</td>
                    <td>\{{order.dealType}}</td>
                    <td>\{{order.amount}}</td>
                    <td>\{{order.status}}</td>
                </tr>
                </tbody>
            </table>

            <div class="am-cf">
                共 \{{ordersVM.currentOrders.length}} 条记录
                <div class="am-fr">
                    <pagination previous-text="&lsaquo;" next-text="&rsaquo;" items-per-page="ordersVM.itemsPerPage" total-items="ordersVM.totalItems" ng-model="ordersVM.currentPage" ng-change="ordersVM.pageChanged()"></pagination>
                </div>
            </div>
            <hr />
        </form>
    </div>
</div>
<script src="{{static '/vendor/amazeui/dist/js/amazeui.js'}}"></script>
