<div class="fl tra_right">
    <div class="tra_column">
        <span class="dis fl">我要提现</span>
        <div class="fr newwit_top">
            <span ng-class="{selected:withdrawVM.step === 1}">1.填写提交金额</span>
            <span ng-class="{selected:withdrawVM.step === 2}">2.确认提现信息</span>
            <span ng-class="{selected:withdrawVM.step === 3}">3.提交等待银行处理</span>
        </div>
    </div>
    <div ng-show="withdrawVM.step === 1">
        <div class="newwit_formBox newwit_formBox2 marTop40">
            <div class="newwit_Title fl">
                提现银行卡
            </div>
            <div class="newwit_box fl">
                <img ng-src="\{{withdrawVM.BankNameList[withdrawVM.cards[0].bankID].img}}">
                <span>\{{withdrawVM.cards[0] | displayCard3}}</span>
            </div>

        </div>
        <div class="newwit_formBox ">
            <div class="newwit_Title fl">
                提现金额
            </div>
            <div class="newwit_FomeContent fl">
                <input type="number" min="0" max="\{{withdrawVM.user.finance.balance | currency:'':2}}" class="newwit_inputText" ng-model="withdrawVM.withdrawAmount" autofocus required>
            </div>
            <div class="fl newwit_formText">
                &nbsp;元
            </div>
            <div class="fl fontSize12 color_999999">
                &nbsp;余额 <span class="color_a40000">\{{withdrawVM.user.finance.balance | currency:'':2}}</span>元
            </div>
        </div>
        <alert ng-show="!withdrawVM.showAlipayWindow && !withdrawVM.showBankTransWindow" ng-repeat="alert in withdrawVM.alerts" type="\{{alert.type}}" close="withdrawVM.closeAlert($index)">\{{alert.msg}}</alert>
        <a href="" class="recBtn01 newcar_btn jq_newcar_btn" ng-click="withdrawVM.withdrawNextStep()">下一步</a>
    </div>
    <div ng-show="withdrawVM.step === 2">
        <div class="newwit_formBox marTop40">
            <div class="newwit_Title fl">
                开户名
            </div>
            <div class="newwit_FomeContent fl">
                \{{withdrawVM.cards[0].userName}}
            </div>
        </div>
        <div class="newwit_formBox newwit_formBox2 ">
            <div class="newwit_Title fl">
                提现银行卡
            </div>
            <div class="newwit_box fl">
                <img ng-src="\{{withdrawVM.BankNameList[withdrawVM.cards[0].bankID].img}}">
                <span>\{{withdrawVM.cards[0] | displayCard3}}</span>
            </div>

        </div>
        <div class="newwit_formBox ">
            <div class="newwit_Title fl">
                提现金额
            </div>
            <div class="newwit_FomeContent fl">
                <input type="text" class="newwit_inputText" name="" id="" value="1000" />
            </div>
            <div class="fl newwit_formText">
                &nbsp;元
            </div>
            <div class="fl fontSize12 color_999999">
                &nbsp;余额 <span class="color_a40000">100.00</span>元
            </div>
        </div>
        <div class="newwit_formBox">
            <div class="newwit_Title fl">
                提现金额
            </div>
            <div class="newwit_FomeContent fl">
                <span class="fontSize18 color_a40000">100.00</span>&nbsp;元
            </div>
        </div>
        <div class="newwit_formBox">
            <div class="newwit_Title fl">
                到账时间
            </div>
            <div class="newwit_FomeContent fl">
                <span class="fontSize18">14:00</span>&nbsp;元
            </div>
        </div>
        <a href="javascript:" class="recBtn01 newcar_btn jq_newcar_btn">确认，下一步</a>
    </div>
</div>
