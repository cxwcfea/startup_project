<div class="am-cf am-padding">
    <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">个人资料</strong> / <small>Personal information</small></div>
</div>

<hr/>

<div class="am-g">
    <div class="am-u-sm-12 am-u-md-8">
        <form class="am-form am-form-horizontal" ng-submit="profileVM.updateUserProfile()">
            <div class="am-form-group">
                <label for="user-name" class="am-u-sm-3 am-form-label">昵称</label>
                <div class="am-u-sm-9">
                    <input type="text" id="user-name" placeholder="昵称" ng-model="profileVM.user.profile.name">
                </div>
            </div>

            <div class="am-form-group">
                <label for="user-email" class="am-u-sm-3 am-form-label">电子邮件</label>
                <div class="am-u-sm-9">
                    <input type="email" id="user-email" placeholder="输入你的电子邮件" ng-model="profileVM.user.profile.email">
                </div>
            </div>

            <div class="am-form-group">
                <label class="am-u-sm-3 am-form-label">性别</label>
                <div class="am-u-sm-9 am-u-end">
                    <select am-input-sm data-am-selected="{btnSize: 'sm'}" ng-model="profileVM.user.profile.gender">
                        <option value="M">男生</option>
                        <option value="F">女生</option>
                    </select>
                </div>
            </div>

            <div class="am-form-group">
                <label for="user-QQ" class="am-u-sm-3 am-form-label">QQ</label>
                <div class="am-u-sm-9">
                    <input type="number" id="user-QQ" placeholder="输入你的QQ号码" ng-model="profileVM.user.profile.qq" min="1">
                </div>
            </div>

            <div class="am-form-group">
                <label for="user-weibo" class="am-u-sm-3 am-form-label">微博 / Twitter</label>
                <div class="am-u-sm-9">
                    <input type="text" id="user-weibo" placeholder="输入你的微博 / Twitter" ng-model="profileVM.user.profile.weibo">
                </div>
            </div>

            <div class="am-form-group">
                <label for="user-location" class="am-u-sm-3 am-form-label">住址</label>
                <div class="am-u-sm-9">
                    <textarea class="" rows="5" id="user-location" placeholder="输入住址" ng-model="profileVM.user.profile.location"></textarea>
                </div>
            </div>

            <div class="am-form-group">
                <div class="am-u-sm-9 am-u-sm-push-3">
                    <input type="submit" class="am-btn am-btn-primary" value="保存修改" />
                </div>
            </div>
        </form>
    </div>
</div>
