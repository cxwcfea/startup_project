    .acc_btn02 {
        width: 90px;
    }
</style>
<div class="fl tra_right">
    <div class="tra_column">
        <span class="dis fl">资金明细</span>
    </div>
    <div class="neword_box">
        <div class="fl neword_Left">
            <p class="p01">总资产(元)</p>
            <p class="p02"><span>\{{orderVM.user.finance.deposit+orderVM.user.finance.freeze_capital+orderVM.user.finance.balance+orderVM.user.invest.availableAmount+orderVM.user.invest.occupiedAmount | currency:'':2 | integerNum}}</span>\{{orderVM.user.finance.deposit+orderVM.user.finance.freeze_capital+orderVM.user.finance.balance | currency:'':2 | numTrunc}}</p>
        </div>
        <div>
        </div>
        <div class="fr neword_right">
            <a href="/user/#/recharge" class="acc_btn01">充&nbsp;值</a>
            <a href="/user/#/withdraw" class="acc_btn01">提&nbsp;现</a>
            <a href="" class="acc_btn02" ng-click="orderVM.showInvestTransWindow = true;">投资转入余额</a>
        </div>
        <div class="neword_img"></div>
    </div>
    <div class="neword_box2">
        <div class="neword_text fl">
            <p class="p01">保证金(元)</p>
            <p class="p02">\{{orderVM.user.finance.deposit | currency:'':2}}</p>
        </div>
        <div class="neword_text fl">
            <p class="p01">冻结资金(元)</p>
            <p class="p02">\{{orderVM.user.finance.freeze_capital | currency:'':2}}</p>
        </div>
        <div class="neword_text fl">
            <p class="p01">投资中金额(元)</p>
            <p class="p02">\{{orderVM.user.invest.occupiedAmount | currency:'':2}}</p>
        </div>
        <div class="neword_text fl">
            <p class="p01">待投资金额(元)</p>
            <p class="p02">\{{orderVM.user.invest.availableAmount | currency:'':2}}</p>
        </div>
        <div class="neword_text fl neword_textbgnone">
            <p class="p01">可用余额(元)</p>
            <p class="p02">\{{orderVM.user.finance.balance | currency:'':2}}</p>
        </div>
    </div>
    <div class="neword_menu">
        <div class="fl neword_menulist jq_menuList">
            <ul>
                <li ng-repeat="item in orderVM.queryItems" ng-click="orderVM.queryItem(item)" ng-class="{selected: item.value === orderVM.selected}">\{{item.name}}</li>
                <!--
                <li class="selected">全部</li>
                <li>充值提现</li>
                <li>融资明细</li>
                <li>管理费明细</li>
                -->
            </ul>
        </div>
        <div class="fr">
            <!--
            <select name="" class="select01 select02">
                <option value="">资金类型</option>
                <option value="">充值存入</option>
                <option value="">提现支出</option>
                <option value="">保证金支出</option>
                <option value="">保证金返还</option>
                <option value="">管理费支出</option>
                <option value="">管理费返还</option>
            </select>
            <select name="" class="select01 select02">
                <option value="">三天内</option>
                <option value="">一周内</option>
                <option value="">一个月内</option>
                <option value="">三个月内</option>
                <option value="">全部</option>
            </select>
            <input type="button" class="neward_btn" name="" id="" value="查询" />
            -->
        </div>
    </div>
    <div class="neword_tableBox jq_mainList">
        <div ng-show="orderVM.haveOrder">
            <table>
                <tr>
                    <th class="td01" width="185">创建时间</th>
                    <th>类型</th>
                    <th>收入(元)</th>
                    <th>支出(元)</th>
                    <th>余额(元)</th>
                    <th>状态</th>
                </tr>
                <tr ng-repeat="order in orderVM.showingItems">
                    <td  class="td01">\{{order.createdAt | displayDate}}</td>
                    <td >\{{order.dealType | displayOrderType}}</td>
                    <td >\{{order.amount | displayIncome:order.dealType}}</td>
                    <td >\{{order.amount | displayOutcome:order.dealType}}</td>
                    <td >\{{order.userBalance | currency:'':2}}</td>
                    <td >\{{order.status | orderStatus}}</td>
                </tr>
            </table>
            <div class="neword_page">
                <pagination class="pagination-sm" previous-text="&lt; 上一页" next-text="下一页 &gt;" items-per-page="orderVM.itemsPerPage" total-items="orderVM.totalItems" ng-model="orderVM.currentPage" ng-change="orderVM.pageChanged()" max-size="orderVM.maxSize" rotate="false"></pagination>
                <!--
                <a href="#">&lt; 上一页</a> 1/3
                <a href="#">下一页 &gt;</a>
                -->
            </div>
        </div>
        <div ng-hide="orderVM.haveOrder">
            <table>
                <tr>
                    <th class="td01" width="185">1时间/编号</th>
                    <th>类型</th>
                    <th>收入(元)</th>
                    <th>支出(元)</th>
                    <th>余额(元)</th>
                    <th>&nbsp;</th>
                </tr>
                <tr>
                    <td colspan="6" valign="top">
                        <div class="tableNull">
                            <p>空空如也，怎能发财！</p>
                            <a href="/apply">开始融资第一步></a>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>

<div class="regTcc" ng-show="orderVM.showInvestTransWindow">
    <div class="tmbg"></div>
    <div class="tar_TccBox">
        <div class="regColumn">
            投资本金转入余额
            <div class="loginClose jq_loginClose" ng-click="orderVM.closePopupWindow()"></div>
        </div>
        <div class="pass_Box jq_email1" ng-hide="orderVM.transSuccess">
            <div class=" pass_formBox">
                <div class="fl pass_left">
                    可转金额
                </div>
                <div class="pass_right fl">
                    <span class="color_999999">\{{orderVM.user.invest.availableAmount | number:2}}元</span>
                </div>
            </div>
            <div class="pass_formBox">
                <div class="fl pass_left">
                    预转出金额
                </div>
                <div class="pass_right fl">
                    <input type="number" min="0.01" class="newcar_inputText pass_inputText" ng-model="orderVM.trans_amount" required>
                </div>
            </div>
            <alert ng-repeat="alert in orderVM.alerts" type="\{{alert.type}}" close="orderVM.closeAlert($index)">\{{alert.msg}}</alert>
            <a class="newrec_btn02 newrec_zfbbtn01 jq_Btn02" href="" ng-click="orderVM.investToRecharge()">提  交</a>
        </div>
        <div class="pass_box2 jq_email2" ng-show="orderVM.transSuccess">
            <div class="pass_img fl"></div>
            <div class="pass_text fl">
                <p class="p01">转账结果</p>
                <p class="p01">\{{orderVM.trans_amount | currency:'':2}}元投资本金已转出到余额</p>
                <a class="newrec_btn02 " href="" ng-click="orderVM.closePopupWindow()">确   定</a>
            </div>
            <div class="clear"></div>
        </div>
    </div>
</div>

