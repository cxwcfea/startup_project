        </div>
        <div class="neword_tableBox">
            <table>
                <tr>
                    <th class="td01" width="185">用户名</th>
                    <th class="td01">融资金额（元）</th>
                    <th class="td01">注册时间</th>
                </tr>
                <tr ng-repeat="user in vm.myUserList">
                    <td class="td01">\{{user.mobile | displayMobile}}</td>
                    <td class="td01">\{{user.finance.history_capital | currency:'':2}}</td>
                    <td class="td01">\{{user.registerAt | date:"yyyy-MM-dd HH:mm"}}</td>
                </tr>
            </table>
        </div>
    </div>
    <!--/我的用户-->

    <div class="regTcc" ng-show="vm.showTransMoneyWindow">
        <div class="tmbg"></div>
        <div class="tar_TccBox">
            <div class="regColumn">
                佣金兑换
                <div class="loginClose" ng-click="vm.closePopupWindow()"></div>
            </div>
            <div class="pass_Box" ng-hide="vm.transFail || vm.transSuccess">
                <div class=" pass_formBox">
                    <div class="fl pass_left">
                        现有佣金
                    </div>
                    <div class="pass_right fl">
                        <em>\{{vm.user.finance.commission || 0 | currency:'':2}}</em>
                    </div>
                </div>
                <div class=" pass_formBox">
                    <div class="fl pass_left">
                        可兑换佣金
                    </div>
                    <div class="pass_right fl">
                        \{{vm.transAmount || 0 | currency:'':2}}
                    </div>
                </div>
                <a class="newrec_btn02 newrec_zfbbtn01" href="" ng-click="vm.completeTransMoney()">确  定</a>
            </div>
            <div class="pass_box2 jq_pass_box2" ng-show="vm.transSuccess">
